@page
@model BankStatementProcessor.Pages.TransactionsModel
@{
    ViewData["Title"] = "Lista de Transacciones";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Transacciones Bancarias</h1>

    @if (Model.Transactions != null && Model.Transactions.Any())
    {
        <div class="card shadow-lg p-3">
            <div class="table-responsive">
                <table class="table table-striped table-hover mt-3">
                    <thead class="table-dark">
                        <tr>
                            <th>Fecha</th>
                            <th>Comentarios</th>
                            <th>Monto</th>
                            <th>Balance</th>
                            <th>Cheque</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.Transactions.OrderByDescending(t => t.Fecha))
                        {
                            <tr>
                                <td>@transaction.Fecha.ToShortDateString()</td>
                                <td>@transaction.Comentarios</td>
                                <td>@transaction.Monto.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                                <td>@transaction.Balance.ToString("C", new System.Globalization.CultureInfo("es-DO"))</td>
                                <td>@transaction.Cheque</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            No hay transacciones disponibles.
        </div>
    }
    <div class="text-center mt-4">
        <a asp-page="/Index" class="btn btn-secondary btn-lg">Volver a Cargar Documento</a>
    </div>
</div>
